{{!< default}}

<header id="site-head" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
    <div class="vertical">
        <div id="site-head-content" class="inner">
            <h1 class="blog-title">
                <img alt="{{@blog.title}}" src="/assets/images/uwtb.svg"/>
            </h1>
        </div>
    </div>
</header>

<main class="content" role="main">
    {{#foreach posts}}
    <article class="{{post_class}}">
        <header class="post-header">
            <span class="post-meta"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time> {{#if tags}}on {{tags}}{{/if}}</span>
            <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
        </header>
        <section class="post-excerpt">
            <p>{{#if this.meta_description}}{{this.meta_description}}{{else}}{{excerpt}}&hellip;{{/if}}</p>
        </section>
    </article>
    {{/foreach}}

    {{pagination}}
</main>